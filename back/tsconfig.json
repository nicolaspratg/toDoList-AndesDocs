{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "dynamo.ts"],
  "type": "module"
}
